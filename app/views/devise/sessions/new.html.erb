<div class="container mt-4">
<h2 style="color: white">Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label_html: { class: 'text-color' }%>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "mot de passe" },
                label_html: { class: 'text-color' } %>
    <%= f.input :remember_me, label_html: { class: 'text-color' }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

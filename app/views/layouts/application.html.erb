<!DOCTYPE html>
<html>
  <head>
    <title>AirBnBeast</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@600&display=swap');
      @import url('https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap');
      @import url('https://fonts.googleapis.com/css2?family=Lora:ital@1&display=swap');
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-light bg-light d-flex justify-content-between">
      <%= link_to (user_signed_in? ? offers_path : root_path), class:"d-flex align-items-center navbar-brand m-0 p-0" do%>
        <%= image_tag("logo.png", alt: "AirBnBeast logo")%>
        <h3 id="nav-title">AirBnBeast</h3>
        <%= audio_tag "/sounds/test.mp3", class: "audio-play" %>
      <%end%>
      <div class="right d-flex">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <%= image_tag current_user.avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Customer Zone", mine_offers_path, class: "dropdown-item" %>
                <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item", method:"delete" %>
              </div>
            <% else %>
              <i class="fas fa-user-circle fa-2x"></i>
             <% end %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="drop"></div>
    <div class="drop"></div>
    <%= yield %>
    <%= render 'shared/flashes' %>
    <div class="footer fixed-bottom ">
      <div class="flaque"></div>
      <i class="fas fa-skull-crossbones p-2"></i>by AirBnBeast
    </div>
  </body>
</html>

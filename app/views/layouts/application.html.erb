<!DOCTYPE html>
<html>
  <head>
    <title>AirBnBeast</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@600&display=swap');
      @import url('https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap');
    </style>

  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light d-flex justify-content-between">
      <%= link_to (user_signed_in? ? offers_path : root_path), class:"d-flex align-items-center navbar-brand m-0 p-0" do%>
        <%#= image_tag("logo.png", alt: "AirBnBeast logo")%>
        <h3 id="nav-title">AirBnBeast</h3>
      <%end%>
      <div class="right d-flex">
        <%#= form_tag(offers_path, method: "get", class: "form-inline my-2 my-lg-0") do%>
          <!-- <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search" id="search"> -->
          <%#= submit_tag 'Search', class: "btn btn-outline-primary my-2 my-sm-0" %>
        <%# end %>

        <%= simple_form_for :search, url: offers_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="search" placeholder="Search" name="search" id="search" />
            <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-search"></i>
            </button>
          </div>
        <% end %>

        <%#= link_to_if(user_signed_in?, "Log Out", destroy_user_session_path, class:"btn btn-outline-danger my-2 my-sm-0 ml-1", method:"delete") do %>
          <%#= link_to "Log Out", nil, class:"btn btn-outline-danger my-2 my-sm-0 ml-1 disabled" %>
        <%# end %>

          <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
              <%#= link_to (user_signed_in? ? mine_offers_path : nil) do %>
                <% if user_signed_in? %>
                  <%= image_tag current_user.avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to "Espace Client", mine_offers_path, class: "dropdown-item" %>
                    <%= link_to "Log Out", destroy_user_session_path, class: "dropdown-item", method:"delete" %>
                  </div>
                <% else %>
                  <i class="fas fa-user-circle"></i>
                <% end %>
              <%# end %>
            </li>
          </ul>

      </div>
    </nav>
    <%# <div class="drop"></div>
    <div class="drop"></div>
    <div class="flaque"></div> %>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= render 'shared/flashes' %>

    <div class="footer">
      Made with <i class="fas fa-heart"></i> by AirBnBeast
      <!-- <i class="fas fa-skull-crossbones"></i> -->
    </div>
  </body>
</html>

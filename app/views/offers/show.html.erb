<div class="container">

  <div class="offer_profil">
    <%=image_tag(@offer.user.avatar_url, class:"avatar-bordered")%>
    <div class="profil-content">
      <h2><%= @seller %></h2>
      <p><%= @offer.user.description %></p>
    </div>
  </div>

  <div class="card-offer-show">
    <%= cl_image_tag(@offer.photo_url.key)%>
    <div class="card-offer-show-infos">
      <h2><%= @offer.title %></h2>
      <p><%= @offer.description %></p>
      <p><%= @offer.date %></p>
      <div class="target">
        <%= simple_form_for [ @offer, @booking ], :html => {class: "form-inline mx-5"} do |f| %>
        <%= f.input :target, placeholder: "Balance ta Target ici", label:"Target", input_html: { class: 'mr-5' } %>
        <%= f.submit "BOOK", class: "btn btn-danger btn-book", id: "sweet-alert-demo" %>
        <% end %>
      </div>
     </div>
    <div class="zone-book">
      <h3><%= @offer.price %>â‚¬</h3>
    </div>
  </div>

  <div class="d-flex justify-content-start my-4">
      <%= link_to "Back to offers", offers_path %>
  </div>
</div>

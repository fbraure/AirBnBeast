<!--  Afficher les offres créé par current_user -->
<div class="container">
  <div class="profil">
    <%=image_tag(@user.avatar_url, class:"avatar-large")%>
    <div class="profil-content">
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <p><%= @user.description %>
    </div>
  </div>

  <ul class="list-inline tabs-underlined">
    <li>
      <%= link_to "Mes Services Achetés", mine_offers_path(params: {service: "bought"}), class: "tab-underlined #{"active" if @offer_type == "bought"}" %>
    </li>
    <li>
      <%= link_to "Mes Services Achetés Annulés", mine_offers_path(params: {service: "cancelled"}), class: "tab-underlined #{"active" if @offer_type == "cancelled"}" %>
    </li>
    <li>
      <%= link_to "Mes Services Proposés", mine_offers_path(params: {service: "proposed"}), class: "tab-underlined #{"active" if @offer_type == "proposed"}" %>
    </li>
  </ul>

  <% ["bought", "cancelled", "proposed"].each do |offer_type| %>
    <div class="border rounded">
    <% if @offer_type == offer_type %>
      <% @offers.each do |offer| %>
        <div class="d-flex align-items-center">
          <div class="card-product flex-grow-1">
            <%= image_tag offer.photo_url%>
            <div class="card-product-infos">
              <h5><%= offer.title %></h5>
              <p><%= offer.description %></p>
              <p><%= offer.date %></p>
              <h5><%= offer.price %>€</h5>
            </div>
            <%= image_tag offer.user.avatar_url, class: "avatar"%>
          </div>
          <% if  @offer_type == "bought" %>
            <%= link_to unbook_offer_path(offer), method: :patch do%>
            <i class="far fa-window-close fa-4x p-2"></i>
            <% end %>
          <% elsif  @offer_type == "proposed" %>
            <%= link_to unbook_offer_path(offer), method: :delete do%>
            <i class="fas fa-trash-alt  fa-4x p-2"></i>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
    </div>
  <% end %>


